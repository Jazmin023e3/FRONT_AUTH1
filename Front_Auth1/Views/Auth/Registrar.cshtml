@model Front_Auth1.DTOs.UsuarioRegistroDTO

@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="row justify-content-center">
    <div class="col-md-6 card p-5 shadow-lg rounded-3">
        <h2 class="card-title text-center mb-4 text-primary">Crear Nueva Cuenta</h2>

        <form asp-action="Registrar" method="post">
            <!-- Resumen de Errores (para errores de validación o del API) -->
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <!-- Campo Nombre Completo -->
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <!-- Campo Nombre de Usuario (Username) -->
            <div class="mb-3">
                <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>

            <!-- Campo Contraseña -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <!-- Campo Confirmar Contraseña -->
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid gap-2 mt-4">
                <button type="submit" class="btn btn-success btn-lg">
                    <i class="bi bi-person-plus-fill"></i> Registrarme
                </button>
            </div>

            <div class="mt-3 text-center">
                <a asp-action="Login" class="text-decoration-none">¿Ya tienes cuenta? Inicia Sesión</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
