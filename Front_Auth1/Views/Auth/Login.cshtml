@model Front_Auth1.DTOs.UsuarioDTOs.UsuarioLoginDTO

@{
    ViewData["Title"] = "Iniciar Sesión";
    // Si deseas que la página de login no use el layout principal (sin menú ni encabezado),
    // descomenta la siguiente línea:
    // Layout = null;
}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5 col-xl-4">
        <div class="card p-4 shadow-lg border-0 rounded-3">
            <h2 class="card-title text-center mb-4 text-primary fw-bold">Acceso a PlasticSys</h2>

            <form asp-action="Login" method="post">
                
                @* Muestra mensajes de error generales (e.g., login fallido) *@
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3" role="alert"></div>

                @* Campo de Nombre de Usuario *@
                <div class="mb-3">
                    <label asp-for="Username" class="form-label fw-semibold">Nombre de Usuario</label>
                    <input asp-for="Username" class="form-control form-control-lg" placeholder="Introduce tu usuario" required />
                    <span asp-validation-for="Username" class="text-danger small"></span>
                </div>
                @* Campo de Contraseña *@
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold">Contraseña</label>
                    <input asp-for="Password" class="form-control form-control-lg" type="password" placeholder="Introduce tu contraseña" required />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                        <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                    </button>
                </div>
            </form>
            <div class="mt-3 text-center">
                <p class="mb-0">¿No tienes cuenta? <a asp-action="Registrar" class="text-info fw-semibold">Regístrate aquí</a></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        // Esto carga las librerías de validación de JavaScript necesarias.
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
