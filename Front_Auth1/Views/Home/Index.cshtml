@{
    ViewData["Title"] = "PlasticSys - Inicio";

    // ELIMINADA toda la lógica de autenticación y sesión
    // bool isAuthenticated = !string.IsNullOrEmpty(Context.Session.GetString("JWToken"));
}

<style>
    /* 1. Fondo de la página: Degradado Suave Azul a Verde Menta (Limpieza y Ecología) */
    body {
        background: linear-gradient(135deg, #e0f7fa 0%, #f0fcfc 100%); /* Azul cielo claro a verde menta suave */
        color: #333; /* Texto por defecto en gris oscuro */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* Estilo para la barra de navegación para que se integre mejor */
    /* NOTA: Estos estilos deberían estar en _Layout.cshtml, pero se incluyen para referencia visual */
    .navbar {
        background-color: #f0f8ff;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    /* Estilo para el pie de página */
    .footer {
        background-color: #f0f8ff;
        border-top: 1px solid rgba(0, 0, 0, 0.05);
    }

    /* Centra el contenido principal */
    .hero-content {
        min-height: 80vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        /* Estilos adicionales para los textos del hero */
        .hero-content h1 {
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1); /* Sombra sutil para el título */
        }
</style>

<div class="hero-content">
    <div class="text-center p-4">

        @* Título: Azul Marino Profundo (#1a5276) *@
        <h1 class="display-3 fw-bold mb-4" style="color: #1a5276;">Bienvenido a PlasticSys</h1>

        @* Descripción: Gris Azulado Suave (#4a6d8a) *@
        <p class="lead mx-auto mb-5" style="max-width: 700px; color: #4a6d8a;">
            PlasticSys es la plataforma oficial para la administración y trazabilidad de todos los procesos de reciclaje y fabricación de productos plásticos.
        </p>

        @* AQUÍ ESTARÁ EL CONTENIDO PRINCIPAL DE LA APLICACION (EJ. LAS TABLAS) *@

        @* Botón con Icono: Verde Agua Vibrante (#20b2aa) *@
        <a asp-controller="Producto" asp-action="Index" class="btn btn-lg shadow-lg mt-3"
           style="background-color: #20b2aa; border-color: #20b2aa; color: white; padding: 12px 30px; border-radius: 30px; font-weight: bold; transition: background-color 0.3s;">
            <i class="fa-solid fa-warehouse me-2"></i> Ver Tablas de Productos
        </a>
    </div>
</div>